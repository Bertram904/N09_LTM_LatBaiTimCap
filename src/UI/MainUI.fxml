<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="client.controller.MainController"
            prefWidth="800" prefHeight="500"
            style="-fx-background-color: linear-gradient(to bottom right, #E6E6FF, #6F00FF);">

    <!-- Header -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20"
              style="-fx-padding: 15; -fx-background-color: #6F00FF;">
            <Label fx:id="lblWelcome"
                   text="Xin chào, User!"
                   style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Đăng xuất" onAction="#onLogout"
                    style="-fx-background-color: #FF69B4; -fx-text-fill: white;
                           -fx-font-weight: bold; -fx-background-radius: 20; -fx-padding: 5 15;"/>
        </HBox>
    </top>
    
    <!-- Nội dung chính -->
    <center>
        <VBox spacing="15" alignment="CENTER" style="-fx-padding: 20;">

            <!-- Các nút đặt ngay trên bảng -->
            <HBox alignment="CENTER" spacing="25">
                <Button text="Xem lịch sử đấu" onAction="#onHistory"
                        style="-fx-background-color: #6F00FF; -fx-text-fill: white;
                               -fx-font-size: 14px; -fx-font-weight: bold;
                               -fx-background-radius: 25; -fx-padding: 10 25;"/>
                <Button text="Xem bảng xếp hạng" onAction="#onRanking"
                        style="-fx-background-color: #FF69B4; -fx-text-fill: white;
                               -fx-font-size: 14px; -fx-font-weight: bold;
                               -fx-background-radius: 25; -fx-padding: 10 25;"/>
                <Button text="Cập nhật trạng thái" onAction="#onRefresh"
                        style="-fx-background-color: #E6E6FF; -fx-text-fill: #6F00FF;
                               -fx-font-size: 14px; -fx-font-weight: bold;
                               -fx-background-radius: 25; -fx-padding: 10 25;"/>
            </HBox>
            <Label text="Danh sách người chơi"
                   style="-fx-font-size: 20px; -fx-text-fill: #6F00FF; -fx-font-weight: bold;"/>
            <!-- Bảng danh sách người chơi -->
            <TableView fx:id="tblPlayers" VBox.vgrow="ALWAYS" prefWidth="700"
                       style="-fx-background-radius: 12; -fx-border-color: #6F00FF;
                              -fx-border-radius: 12; -fx-border-width: 2; -fx-table-cell-border-color: transparent;">
                <columns>
                    <TableColumn fx:id="colName" text="Tên" prefWidth="250"/>
                    <TableColumn fx:id="colScore" text="Tổng điểm" prefWidth="200"/>
                    <TableColumn fx:id="colStatus" text="Trạng thái" prefWidth="250"/>
                </columns>
            </TableView>
        </VBox>
    </center>

</BorderPane>
