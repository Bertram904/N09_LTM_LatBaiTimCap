<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="client.controller.RankingController"
            prefWidth="800" prefHeight="500"
            styleClass="mainFxmlClass"
            style="-fx-background-color: linear-gradient(to bottom right, #E6E6FF, #6F00FF);">


    <!-- Header -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20"
              style="-fx-padding: 15; -fx-background-color: #6F00FF;">
            <Label text="🏆 Bảng xếp hạng"
                   style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Quay lại" onAction="#onBack"
                    style="-fx-background-color: #FF69B4; -fx-text-fill: white;
                           -fx-font-weight: bold; -fx-background-radius: 20; -fx-padding: 5 15;"/>
        </HBox>
    </top>

    <!-- Content -->
    <center>
        <VBox spacing="15" alignment="CENTER" style="-fx-padding: 20;">
            <TableView fx:id="tblRanking" VBox.vgrow="ALWAYS" prefWidth="700"
                style="-fx-background-radius: 12; -fx-border-color: #6F00FF;
                    -fx-border-radius: 12; -fx-border-width: 2; -fx-table-cell-border-color: transparent;">
                <columns>
                    <TableColumn fx:id="colRank" text="Hạng" prefWidth="100"/>
                    <TableColumn fx:id="colName" text="Tên" prefWidth="200"/>
                    <TableColumn fx:id="colTotalScore" text="Tổng điểm" prefWidth="200"/>
                    <TableColumn fx:id="colWinAmount" text="Số trận thắng" prefWidth="200"/>
                </columns>
            </TableView>

        </VBox>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER" spacing="15" style="-fx-padding: 10;">
            <Label text="💡 Top 3 sẽ được vinh danh trên bảng vàng!"
                   style="-fx-font-size: 14px; -fx-text-fill: #6F00FF;"/>
        </HBox>
    </bottom>
</BorderPane>
